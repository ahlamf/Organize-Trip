<p id="notice"><%= notice %></p>

<h1>Trips</h1>

<table class="table table-striped">
  <thead>
    <tr>
      
      <th>Title</th>
      <th>City</th>
      <th>Country</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trips.each do |trip| %>
      <tr>
        <td><%= trip.title %></td>
        <td><%= trip.city %></td>
        <td><%= trip.country %></td>
        <td><%= trip.price %></td>
        <td><%= link_to 'Show', trip %></td>
        <td><%= link_to 'Edit', edit_trip_path(trip) %></td>
        <td><%= link_to 'Destroy', trip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

